<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="%HOME%\site\wwwroot\env\Scripts\python.exe"
                  arguments="%HOME%\site\wwwroot\deploy.cmd"
                  stdoutLogEnabled="true"
                  stdoutLogFile="%HOME%\LogFiles\stdout"
                  startupTimeLimit="60">
      <environmentVariables>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="WEBSITE_RUN_FROM_PACKAGE" value="1" />
        <environmentVariable name="SCM_DO_BUILD_DURING_DEPLOYMENT" value="true" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration> 